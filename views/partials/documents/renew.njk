{% set documents = ['old passport'] %}

{% if values['dual-nationality'] %}
    {% set documents = (documents.push('any passports from other countries that haven\'t expired'), documents) %}
{% endif %}

{% if not values['16-or-older'] %}
    {% if values['relationship-applicant'] === 'Mother' or values['relationship-applicant'] === 'Father' %}
        {% set documents = (documents.push('any court orders (for example that describe parental responsibility or residency arrangements)'), documents) %}
    {% endif %}

{% elif values['16-or-older'] or values['rising-16'] %}
    {% if values['relationship-applicant'] === 'Mother' or values['relationship-applicant'] === 'Father' %}
        {% set documents = (documents.push('a signed and dated letter confirming why you\'re making this application on behalf of the applicant'), documents) %}
        {% set documents = (documents.push('a signed and dated letter from a medical professional, for example a doctor or carer confirming why the applicant can\'t apply'), documents) %}
    {% endif %}
{% endif %}

{% if not values['change-name'] %}
    <h2 class="govuk-heading-l">Applicant's documents</h2>
    <h3 class="govuk-heading-m">Send the following:</h3>
    <ul class="list list-bullet">
        {% for item in documents %}
            <li>{{item}}</li>
        {% endfor %}
    </ul>

    <!-- 12-15s 3rd Party = Father -->
    {% if not values['16-or-older'] and values['relationship-applicant'] === 'Father' %}
        <h3 class="govuk-heading-m">And 1 of the following:</h3>
        <ul class="list list-bullet">
            <li>full birth or adoption certificate</li>
            <li>a signed and dated letter from the mother (or other person with parental responsibility)
                giving consent for the issue of the child's new passport</li>
        </ul>
    {% endif %}

    {% if values['16-to-18'] %}
        {% if values['relationship-applicant'] === 'Mother' or values['relationship-applicant'] === 'Father' %}
            <h3 class="govuk-heading-m">If you have parental responsibility:</h3>
            <ul class="list list-bullet">
                <li>include confirmation of this in your letter telling us why you're making the application</li>
            </ul>
            <h3 class="govuk-heading-m">If you don't have parental responsibility, also send the following:</h3>
            <ul class="list list-bullet">
                <li>a signed and dated letter from the person with parental responsibility giving permission for you to make the application</li>
            </ul>
        {% endif %}
    {% endif %}

    <hr>

{% else %}
    {% include "views/partials/documents/change-of-name-prototype.njk" %}
{% endif %}

    <p>If any of the following apply, you'll need to send <a href="/guidance/additional-documents">additional documents</a>:<p>
    <ul class="list list-bullet">
        <li>include a title on your passport</li>
        <li>apply for a British National Overseas (BNO) passport</li>
        <li>apply for a British Protected Person passport</li>
        <li>change your gender on your passport</li>
        <li>renew a passport that was issued for 1 year or less</li>
        <li>change British nationality status in your passport to British citizen</li>
    </ul>
    <br>
