{% set documents = ['old passport'] %}

{% if values['dual-nationality'] %}
    {% set documents = (documents.push('any passports from other countries that haven\'t expired'), documents) %}
{% endif %}

{% if not values['16-or-older'] and not values['rising-16'] %}
    {% if values['relationship-applicant'] === 'Mother' or values['relationship-applicant'] === 'Father' or values['relationship-applicant'] === 'Other' %}
        {% set documents = (documents.push('any court orders (for example that describe parental responsibility or residency arrangements)'), documents) %}
    {% endif %}

{% elif values['16-to-18'] or values['rising-16'] %}
    {% if values['relationship-applicant'] === 'Mother' or values['relationship-applicant'] === 'Father' or values['relationship-applicant'] === 'Social Worker' or values['relationship-applicant'] === 'Other' %}
        {% set documents = (documents.push('a signed and dated letter from a healthcare professional, for example a doctor or carer confirming why the applicant can\'t apply'), documents) %}
    {% endif %}
{% endif %}

{% if not values['change-name'] %}
    {% if not values['16-or-older'] and not values['rising-16'] and values['relationship-applicant'] === 'Social Worker' %}
        <h2 class="govuk-heading-l">Applicant's documents</h2>
        <h3 class="govuk-heading-m">Under which Care Order is the child being looked after?</h3>
        <div class="accordion" id="name-change-accordion">

            <div class="accordion-section" id="full-care-order">
                <div class="accordion-section-header">
                    <h2 class="heading-small">Full Care Order</h2>
                </div>

                <div class="accordion-section-body">
                    <h3 class="govuk-heading-m">Send the following:</h3>
                    <ul class="list list-bullet">
                        {% for item in documents %}
                            <li>{{item}}</li>
                        {% endfor %}
                        <li>a letter stating the section of the <a href="/guidance/children-acts" target="_blank">Children Act</a> under which the child is looked after</li>
                    </ul>
                </div>
            </div>

            <div class="accordion-section" id="interim-care-order">
                <div class="accordion-section-header">
                    <h2 class="heading-small">Interim Care Order</h2>
                </div>

                <div class="accordion-section-body">
                    <h3 class="govuk-heading-m">Send the following:</h3>
                    <ul class="list list-bullet">
                        {% for item in documents %}
                            <li>{{item}}</li>
                        {% endfor %}
                        <li>original of the Interim Care Order showing the date the order expires (it will need to be valid on the date the new passport is issued)</li>
                        <li>a letter stating the section of the <a href="/guidance/children-acts" target="_blank">Children Act</a> under which the child is looked after</li>
                    </ul>
                </div>
            </div>

            <div class="accordion-section" id="accommodated-care-order">
                <div class="accordion-section-header">
                    <h2 class="heading-small">Accommodated Care Order</h2>
                </div>

                <div class="accordion-section-body">
                    <h3 class="govuk-heading-m">Send the following:</h3>
                    <ul class="list list-bullet">
                        {% for item in documents %}
                            <li>{{item}}</li>
                        {% endfor %}
                        <li>letter of consent from the person with parental responsibility for the child</li>
                        <li>a letter stating the section of the <a href="/guidance/children-acts" target="_blank">Children Act</a> under which the child is looked after</li>
                    </ul>
                </div>
            </div>

        </div>

    {% else %}
        <h2 class="govuk-heading-l">Applicant's documents</h2>
        <h3 class="govuk-heading-m">Send the following:</h3>
        <ul class="list list-bullet">
            {% for item in documents %}
                <li>{{item}}</li>
            {% endfor %}
        </ul>

        {% if not values['16-or-older'] and not values['rising-16'] %}
            {% if values['relationship-applicant'] === 'Father' %}
                <h3 class="govuk-heading-m">If you don't have parental responsibility, also send the following:</h3>
                <ul class="list list-bullet">
                    <li>a signed and dated letter from the mother (or other person with parental responsibility)
                        giving consent for the issue of the child's new passport</li>
                </ul>

            {% elif values['relationship-applicant'] === 'Other' %}
                <h3 class="govuk-heading-m">You also need to send evidence to prove your responsibility for the child:</h3>
                <ul class="list list-bullet">
                    <li>read the guidance to find out which documents you need to send</li>
                </ul>
            {% endif %}

        {% elif values['16-to-18'] or values['rising-16'] %}
            {% if values['relationship-applicant'] === 'Mother' or values['relationship-applicant'] === 'Father' or values['relationship-applicant'] === 'Social Worker' or values['relationship-applicant'] === 'Other' %}
                <h3 class="govuk-heading-m">If you don't have parental responsibility, also send the following:</h3>
                <ul class="list list-bullet">
                    <li>a signed and dated letter from the person with parental responsibility giving permission for you to make the application</li>
                </ul>
            {% endif %}

        {% else %} {# Over 18s #}
            {% if values['relationship-applicant'] === 'Mother' or values['relationship-applicant'] === 'Father' or values['relationship-applicant'] === 'Social Worker' or values['relationship-applicant'] === 'Other' %}
                <h3 class="govuk-heading-m">And send 1 of the following:</h3>
                <ul class="list list-bullet">
                    <li>a signed and dated letter from a healthcare professional, for example a doctor or carer confirming why the applicant can't apply</li>
                    <li>court order or lasting power of attorney</li>
                </ul>
            {% endif %}

        {% endif %}

        <hr>

    {% endif %}

{% else %}
    {% include "views/partials/documents/change-of-name-prototype.njk" %}
{% endif %}

    <p>If any of the following apply, you'll need to send <a href="/guidance/additional-documents">additional documents</a>:<p>
    <ul class="list list-bullet">
        <li>include a title on your passport</li>
        <li>apply for a British National Overseas (BNO) passport</li>
        <li>apply for a British Protected Person passport</li>
        <li>change your gender on your passport</li>
        <li>renew a passport that was issued for 1 year or less</li>
        <li>change British nationality status in your passport to British citizen</li>
    </ul>
    <br>
